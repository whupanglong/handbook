.container {
  background: #F9F9F9;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
  /* padding: 15px 0; */
}
.container::before {
  position: fixed;
  top: 0;
  left: 0;
  content: ' ';
  width: 100%;
  height: 1rpx;
  background-color: #e2e2e2;
  z-index: 5;
}
.fixed-top {
  position:absolute;
  top:0;
  display:block;
  width:100%;
  max-height: 125rpx;
}
.fixed-middle{
  overflow: auto;
  position:absolute;
  width: 100%;
  top: 130rpx;
  bottom: 100rpx;
}
.fixed-bottom{
  position:fixed;
  bottom:0;
  display:block;
  width:100%;
  max-height: 100rpx;
}
.fixed{
  position: fixed;
  table-layout: fixed;
}
.pyq-scroll{
  /* display:block; */
  white-space:nowrap;
  height: 45px;
  flex-direction:row;
  border-bottom:1rpx solid #e5e5e5;
  background:#fff;

}
.pyq-scroll__item{
  /* 我擦..这里用px会导致下滑覆盖scroll */
  min-width:140rpx;
}
/* 长的跟普通view一样的button*/
.mystery-btn{
  padding:unset;
  font-size:unset;
  line-height:unset;
  background-color:unset;
}
.mystery-btn::after{
  content:none;
}
/*一行两列版式*/
.zan-row .odd{
  padding: 0 1% 0 2%;
}
.zan-row .even{
  padding: 0 2% 0 1%;
}
/*一行3列*/
.zan-row .col0{
  padding: 0 0.5% 0 1%;
}
.zan-row .col1{
  padding: 0 0.5% 0 0.5%;
}
.zan-row .col2{
